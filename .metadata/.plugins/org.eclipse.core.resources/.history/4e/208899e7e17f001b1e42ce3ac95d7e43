			System.out.print("Please enter your selection: ");
			int choice = Integer.parseInt(sc.nextLine());
			System.out.println(choice);
			switch (choice) {
			case 1:
				break;
			case 2: 
				break;
			case 3:
				break;
			case 4:
				break;
			case 5: progopen = false;
				break;
			default : System.out.println("Invalid selection");
			}
		}
	}
	
